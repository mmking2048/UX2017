<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - News Generator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Real News", "News", "Home", new { symbol = "AAPL" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("News", "News", "Home", new { symbol = "AAPL" }, new {})</li>*@
                    <script>
                        sessionStorage.setItem("symbol", "AAPL")
                        document.getElementByID("searchInput").value = sessionStorage.getItem("symbol");
                    </script>

                    <li>@Html.ActionLink("News", "News", "Home", null, new { onclick = "this.href += '?symbol=' + document.getElementById('searchInput').value;" })</li>
                    <li>@Html.ActionLink("Profile", "GetProfile", "Profile", null, new { onclick = "this.href += '?symbol=' + document.getElementById('searchInput').value;" })</li>

                    @* Search Box*@
                    @*<li>@Html.ActionLink("Search", "News", "Home", null, new { onclick = "this.href += '?symbol=' + document.getElementById('searchInput').value;" })</li> *@
                    @*<li>@Html.ActionLink("Earnings", "EarningsNews", "News")</li>
                    <li>@Html.ActionLink("Dividends", "DividendsAnnouncement", "News")</li>*@
                    <li class="pull-right"><input class="form-control" type="search" name="SearchInput" id="searchInput" style="margin-top: 8px;" /></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - News Generator</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
