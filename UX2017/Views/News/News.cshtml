@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br/>
    <div id="related-companies" class="col-md-3 col-lg-3" style="margin-top: 70px;">
        @Html.Partial("RelatedStocks")
    </div>

    <div id="news-stuff" class="col-md-8 col-lg-8">
        <div id="news">
            <h3>@ViewBag.News.Headline</h3>

            <img src="@ViewBag.News.ImageUrl" style="margin: 10px;"/><br/>

            @Html.Raw(ViewBag.News.Body)
        </div>
        <div id="related-topics">
            @if (ViewBag.NewsArticles != null)
            {
                <h3>Related stories:</h3>
                foreach (var article in ViewBag.NewsArticles)
                {
                    <div style="margin-bottom: 20px;">
            
                        @Html.ActionLink((string)article.Headline, "News", "News", new { newsID = article.NewsID }, new { @class = "h4"})
                        <p>@article.Body</p>
                    </div>
                }
            }
        </div>
    </div>
</div>