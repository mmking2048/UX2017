<h5><b>Related stocks</b></h5>

@if (ViewBag.RelatedStocks != null)
{
    <div class="row">
        <div class="col-md-4 col-lg-4"><b>Symbol</b></div>
        <div class="col-md-4 col-lg-4"><b>Net Change</b></div>
        <div class="col-md-4 col-lg-4"><b>% Change</b></div>
    </div>

    foreach (var stock in ViewBag.RelatedStocks)
    {
        <div class="row">
            <div class="col-md-4 col-lg-4">
                @Html.ActionLink((string)stock.Symbol, "GetProfile", "Profile", new { symbol = stock.Symbol }, new{})
            </div>
            <div class="col-md-4 col-lg-4 @(stock.NetChange > 0 ? "green" : stock.NetChange < 0 ? "red" : "")">
                @string.Format("{0:n2}", stock.NetChange)
                <span class="glyphicon @(stock.NetChange > 0 ? "glyphicon-triangle-top" : stock.NetChange < 0 ? "glyphicon-triangle-bottom" : "")"></span>
            </div>
            <div class="col-md-4 col-lg-4 @(stock.NetChange > 0 ? "green" : stock.NetChange < 0 ? "red" : "")">
                @string.Format("{0:n2}", stock.PercentChange)%
                <span class="glyphicon @(stock.NetChange > 0 ? "glyphicon-triangle-top" : stock.NetChange < 0 ? "glyphicon-triangle-bottom" : "")"></span>
            </div>
        </div>
    }
}